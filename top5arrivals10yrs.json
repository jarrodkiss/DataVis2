{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "",
    "width": 1000,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/jarrodkiss/DataVis2/main/A2_Dataset.csv",
      "format": { "type": "csv" }
    },
    "params": [
      {
        "name": "currentYear",
        "value": 2024
      },
      {
        "name": "topCountries",
        "value": [
          "New Zealand",
          "China",
          "United Kingdom",
          "India",
          "United States of America"
        ]
      }
    ],
    "transform": [
      {
        "filter": "(datum.Year >= (currentYear - 9)) && (indexof(topCountries, datum.Country) >= 0) && datum.Arrivals > 0"
      },
      {
        "calculate": "datetime(datum.Year, datum.Month - 1, 1)",
        "as": "Date"
      },
      {
        "aggregate": [
          { "op": "sum", "field": "Arrivals", "as": "TotalArrivals" }
        ],
        "groupby": ["Date", "Country"]
      }
    ],
   "layer": [
      {
        "mark": { "type": "rect", "color": "lightgray", "opacity": 0.5 },
        "encoding": {
          "x": { "datum": "2020", "type": "ordinal" },
          "x2": { "datum": "2022", "type": "ordinal" },
          "tooltip": { "value": "COVID-19 Pandemic (2020-2022). Resulting in a massive fall in arrivals and departures."}
        }
      },
      {
        "mark": {
          "type": "line",
          "point": true
        },
        "encoding": {
          "x": {
            "field": "Year",
            "type": "ordinal",
            "title": "Year",
            "axis": { "labelAngle": 45 }
          },
          "y": {
            "field": "Count",
            "type": "quantitative",
            "title": "Number of People"
          },
          "color": {
            "field": "Type",
            "type": "nominal",
            "title": "Type",
            "scale": { "scheme": "category10" }
          },
          "tooltip": [
            { "field": "Year", "type": "ordinal", "title": "Year" },
            { "field": "Type", "type": "nominal", "title": "Type" },
            { "field": "Count", "type": "quantitative", "title": "Count" }
          ]
        }
      }
    ]
  }
