{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Monthly Arrivals for Top 10 Countries (Last 10 Years)",
    "data": {
      "url": "https://raw.githubusercontent.com/jarrodkiss/DataVis2/main/A2_Dataset.csv",
      "format": { "type": "csv" }
    },
    "transform": [
      {
        "filter": "(datum.Year >= (currentYear - 9)) && (indexof(topCountries, datum.Country) >= 0) && datum.Arrivals > 0"
      },
      {
        "calculate": "datetime(datum.Year, datum.Month - 1, 1)",
        "as": "Date"
      },
      {
        "aggregate": [
          { "op": "sum", "field": "Arrivals", "as": "TotalArrivals" }
        ],
        "groupby": ["Date", "Country"]
      }
    ],
    "width": 1000,
    "height": 500,
    "mark": {
      "type": "line",
      "point": false,
      "interpolate": "linear",
      "clip": true
    },
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "title": "Date",
        "axis": {
          "format": "%Y-%m",
          "labelAngle": -45,
          "labelOverlap": "parity"
        }
      },
      "y": {
        "field": "TotalArrivals",
        "type": "quantitative",
        "title": "Number of Arrivals"
      },
      "color": {
        "field": "Country",
        "type": "nominal",
        "title": "Country",
        "scale": { "scheme": "category10" },
        "legend": {
          "orient": "bottom",
          "title": "Country",
          "titleOrient": "top",
          "columns": 5
        }
      },
      "tooltip": [
        { "field": "Country", "type": "nominal", "title": "Country" },
        {
          "field": "Date",
          "type": "temporal",
          "title": "Date",
          "format": "%B %Y"
        },
        { "field": "TotalArrivals", "type": "quantitative", "title": "Total Arrivals" }
      ]
    },
    "params": [
      {
        "name": "currentYear",
        "value": 2024
      },
      {
        "name": "topCountries",
        "value": [
          "New Zealand",
          "China",
          "United Kingdom",
          "India",
          "United States of America"
        ]
      }
    ]
  }
  
