{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Arrivals and Departures by Year",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/jarrodkiss/DataVis2/main/A2_Dataset.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "aggregate": [
          {"op": "sum", "field": "Arrivals", "as": "Total Arrivals"},
          {"op": "sum", "field": "Departures", "as": "Total Departures"}
        ],
        "groupby": ["Year"]
      },
      {
        "fold": ["Total Arrivals", "Total Departures"],
        "as": ["Type", "Count"]
      }
    ],
    "encoding": {
      "x": {
        "field": "Year",
        "type": "ordinal",
        "title": "Year",
        "axis": {"labelAngle": 45}
      },
      "y": {
        "field": "Count",
        "type": "quantitative",
        "title": "Number of People"
      },
      "color": {
        "field": "Type",
        "type": "nominal",
        "title": "Type",
        "scale": {"scheme": "category10"}
      },
      "tooltip": [
        {"field": "Year", "type": "ordinal", "title": "Year"},
        {"field": "Type", "type": "nominal", "title": "Type"},
        {"field": "Count", "type": "quantitative", "title": "Count"}
      ]
    },
    "mark": {
      "type": "line",
      "point": true
    }
  }
  
